{
    "$schema": "http://tools.ietf.org/html/draft-zyp-json-schema-03",
    "title": "deleted_resource_data",
    "description": "Resource Data version 0.49 for delete",
    "extends": {
        "$ref": "file:lr/schema/abstract_resource_data.json"
    },
    "properties": {
        "doc_type": {},
        "doc_ID": {},
        "resource_data_type":{},
        "active":{},
        "identity": {},
        "submitter_timestamp":{},
        "submitter_TTL":{},
        "publishing_node":{},
        "node_timestamp": {},
        "create_timestamp": {},
        "update_timestamp": {},
        "TOS": {},
        "do_not_distribute": {},
        "weight": {},
        "digital_signature": {},
        "resource_locator": {
            "type": ["array", "string"],
            "required": false,
            "description": "since this signals a delete, no resource_locator is required, as resource may no longer exist."
        },
        "keys": {},
        "resource_TTL": {},
        "payload_schema": {
            "required": false
        },
        "payload_placement": {
            "type": "string",
            "enum": ["none"],
            "description": "limited vocabulary, none: no resource data follows, signaling deletion"
        },
        "replaces" : {
            "type": "array",
            "required": true,
            "minItems": 1,
            "items": {
                "type": "string"
            },
            "description": "A list of doc_ID that refer to RD3 that this RD3 should replace"
        },
        "doc_version": {
            "type": "string",
            "enum": ["0.49.0"],
            "required": true
        }
    },
    "patternProperties": {
        "X_.*" : {}
    },
    "additionalProperties": false
}